<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="210dp"
        android:id="@+id/episode_recycler_view"
        android:paddingBottom="10dp"
        android:layout_width="match_parent"

        android:layout_height="match_parent" />

    <SurfaceView
        android:id="@+id/surface"
        android:layout_width="match_parent"
        android:layout_gravity="top|center"
        android:layout_height="wrap_content" />

    <SurfaceView
        android:id="@+id/sub_surface"
        android:layout_width="match_parent"
        android:background="#00FFFFFF"
        android:layout_gravity="top|center"
        android:layout_height="10dp" />

    <ImageView
        android:id="@+id/episode_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="episode thumbnail" />

<!--    <ProgressBar-->
<!--        android:id="@+id/progressBar2"-->
<!--        style="?android:attr/progressBarStyleHorizontal"-->
<!--        android:layout_marginTop="140dp"-->
<!--        android:progress="60"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content" />-->

    <com.google.android.material.slider.Slider
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="@string/slider_desc"
        android:layout_gravity="center|top"
        android:value="0.0"
        android:valueFrom="0.0"
        android:layout_marginTop="125dp"
        android:valueTo="100.0" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/audio_cycle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        app:elevation="0dp"
        app:borderWidth="0dp"
        app:tint="@android:color/white"
        app:backgroundTint="@color/transparent"
        android:contentDescription="switch audio track"
        app:srcCompat="@drawable/ic_round_audiotrack_white"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/sub_cycle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        app:elevation="0dp"
        app:borderWidth="0dp"
        app:tint="@android:color/white"
        app:backgroundTint="@color/transparent"
        android:contentDescription="switch audio track"
        app:srcCompat="@drawable/ic_baseline_subtitles_white"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="toggle play"
        app:srcCompat="@drawable/ic_round_play_arrow_24"/>

